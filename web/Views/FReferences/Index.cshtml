@model IEnumerable<DAL.Entities.References>
@{
    Layout = "~/Views/Shared/frontlayout.cshtml";
}
<style>
    .refdiv:hover { background-color:#fafafa; }
    .refdiv { display: block; float: left; border:1px solid #efefef; padding:5px; height:140px; width:160px; margin: 0 16px 15px 0; }
</style>

@Html.Partial("_main2Left")
<div class="main2Right">
    <div class="pagenav">
        <ul>
        <li><a href="/">Anasayfa</a></li>
        <li><a href="/kontrolmatik-hakkinda">Kontrolmatik Hakkında</a></li>
        <li><a href="/cozum-ortaklari" class="last">Çözüm Ortaklarımız</a></li>
        </ul>
    </div>
    <h3 class="pageTitle">ÇÖZÜM ORTAKLARIMIZ</h3>
    <div class="pageContent">
        <table cellpadding="0" cellspacing="0" class="partners">
        <tr>
            <td width="250" align="center" valign="top"><img src="img/abb-logo.png" /></td>
            <td ><h4>ABB - http://www.abb.com/</h4>
            <p>Elektrik enerjisinin her alanında Dünya'nın lider mühendislik ve üretici firmalarından biri olan ABB'nin Türkiye sistem entegratörüyüz.</p></td>
        </tr>
        </table>
    </div>
 </div>

<div class="main_content mainpage pageheight" style="">
    <div class="wrapper mainpage grid_12">
        <div class="content_page page">
            <h2>@ReferencesRess.ReferencesStrings.references</h2>
            <hr class="wide" />
            <div id="reflist">
                @foreach (var reference in Model)
                {
                    <a href="@reference.Link" target="_blank">
                        <div class="refdiv">
                            <div style="height:100px; text-align:center">
                                <img width="96" height="96" src="@reference.Logo" alt="@reference.ReferenceName" />
                            </div>
                            <div style="text-align:center">
                                @reference.ReferenceName
                            </div>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
</div>
